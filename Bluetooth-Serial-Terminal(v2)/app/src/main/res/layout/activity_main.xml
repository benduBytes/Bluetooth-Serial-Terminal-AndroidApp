<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:backgroundTint="@color/black">
            
            <Spinner
                android:id="@+id/idMASpinnerBTPairedDevices"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </Spinner>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4">
            
            <Button
                android:id="@+id/idMAButtonConnect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Connect"
                android:backgroundTint="@color/BT_BLUE">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="79">

        <TextView
            android:id="@+id/idMATextViewReceivedMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ReceivedMessage"
            android:textColor="@color/white"
            android:gravity="bottom"
            android:backgroundTint="@color/black">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:backgroundTint="@color/black"
        android:orientation="vertical"
        android:weightSum="2">

<!--        first row of the button-->


<!--        Second row of the button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="100"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idMAButtonStoreData1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="M1"
                android:textSize="12dp"
                android:backgroundTint="@color/BT_BLUE"
                android:layout_weight="20">
            </Button>
            <Button
                android:id="@+id/idMAButtonStoreData2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="M2"
                android:textSize="12dp"
                android:backgroundTint="@color/BT_BLUE"
                android:layout_marginLeft="3dp"
                android:layout_weight="20">
            </Button>
            <Button
                android:id="@+id/idMAButtonStoreData3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="M3"
                android:textSize="12dp"
                android:backgroundTint="@color/BT_BLUE"
                android:layout_marginLeft="3dp"
                android:layout_weight="20">
            </Button>
            <Button
                android:id="@+id/idMAButtonStoreData4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/delete_icon"
                android:paddingLeft="17dp"
                android:textSize="12dp"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/BT_BLUE"
                android:layout_weight="20">
            </Button>
            <Button
                android:id="@+id/idMAButtonShare"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/baseline_share_24"
                android:paddingLeft="17dp"
                android:backgroundTint="@color/BT_BLUE"
                android:textSize="12dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="20">
            </Button>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7">
                <EditText
                    android:id="@+id/idMAEditTextSendMessage"
                    android:layout_width="match_parent"
                    android:textColor="@color/BT_BLUE"
                    android:layout_height="match_parent">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                >

                <Button
                    android:id="@+id/idMAButtonSendData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/baseline_send_24"
                    android:paddingLeft="45dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/BT_BLUE">

                </Button>
            </LinearLayout>
            </LinearLayout>


    </LinearLayout>



</LinearLayout>